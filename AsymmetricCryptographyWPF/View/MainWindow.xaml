<Window x:Class="AsymmetricCryptographyWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:AsymmetricCryptographyWPF.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Title="Курсач" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Name="MainWnd">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadKeys}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.8*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="Ключи">
                <MenuItem Header="Генерация">
                    <MenuItem Header="RSA" Command="{Binding OpenGenerateRsaKeysWindow}"/>
                    <MenuItem Header="DSA">
                        <MenuItem Header="Ключи" Command="{Binding OpenDsaKeysGeneratingWindow}"/>
                        <MenuItem Header="Доменные параметры" Command="{Binding OpenDsaDPGeneratingWindow}"/>
                        <MenuItem Header="Ключи по доменным параметрам" Command="{Binding OpenDsaKeysGeneratingByDPWindow}"/>
                    </MenuItem>
                    <MenuItem Header="ElGamal" Command="{Binding OpenElGamalKeysGeneratingWindow}"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <ListView Grid.Row="1" Grid.Column="0" 
                  ItemsSource="{Binding AllKeys}" 
                  Margin="15"
                  HorizontalAlignment="Stretch"
                  SelectedItem="{Binding SelectedKey}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="125">
                        <TextBlock TextAlignment="Center">
                            Название
                        </TextBlock>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=AlgorithmName}" Width="85">
                        <TextBlock TextAlignment="Center">
                            Алгоритм
                        </TextBlock>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Type}" Width="100">
                        <TextBlock TextAlignment="Center">
                            Тип
                        </TextBlock>
                        
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=BinarySize}" Width="90">
                        <TextBlock TextAlignment="Center">
                            Размер
                        </TextBlock>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            
            <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding OpenShowKeyWindow}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>-->
        </ListView>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0" VerticalAlignment="Top" Content="{Binding SelectedKeyShowingVM}"
            ContentTemplate="{StaticResource ShowKeyParameters}"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Height" Value="25"/>
                    </Style>
                </StackPanel.Resources>
                <Button Content="Открыть полностью" Command="{Binding OpenShowKeyWindow}"/>
                <Button Content="Сохранить в XML" Command="{Binding XmlSaveSelectedKey}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.35*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0 15 0 15"/>
                    <Setter Property="Width" Value="110"/>
                    <Setter Property="Height" Value="25"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="0 15 0 15"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                    <Setter Property="AcceptsReturn" Value="True"/>
                    <Setter Property="AcceptsTab" Value="True"/>
                </Style>
            </Grid.Resources>
            
            <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding InputedText}"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <Button Content="Открыть TXT" Command="{Binding OpenInputTextFile}"/>
                <Button Content="Зашифровать" Command="{Binding Encrypt}"/>
                <Button Content="Расшифровать" Command="{Binding Decrypt}"/>
                <Button Content="Создать ЭЦП" Command="{Binding CreatingDigitalSignatur}"/>
                <Button Content="Проверить ЭЦП" Command="{Binding VerificationDigitalSignatur}"/>
            </StackPanel>

            <TextBox Grid.Row="2" Grid.Column="0" IsReadOnly="True" Text="{Binding ResultText}"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <Button Content="Сохранить в txt" Command="{Binding SaveOutputTxtFile}"/>
                <Button Content="2"/>
                <Button Content="3"/>
                <Button Content="4"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

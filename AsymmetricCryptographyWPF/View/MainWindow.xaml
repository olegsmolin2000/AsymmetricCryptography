<Window x:Class="AsymmetricCryptographyWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsymmetricCryptographyWPF.View"
        mc:Ignorable="d"
        Title="Cryptographer" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="0" Height="33">
            
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0">
                <Button Name="OpenGenerateKeysWindownButton" Content="Генерировать ключи" Click="GenerateKeysButton_Click"/>
            </StackPanel>
            
            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            Background="#f0f0f0">
                    <Label Content="Закрытый ключ" FontSize="18"/>
                    <TextBlock x:Name="PrivateKeyTextBox"
                               TextWrapping="Wrap" />

                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                             Background="#f0f0f0">
                    <Label Content="Открытый ключ" FontSize="18"/>
                    <TextBlock x:Name="PublicKeyTextBox"
                               TextWrapping="Wrap" />

                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="0" Grid.Column="2" 
                        HorizontalAlignment="center">
                <ListView x:Name="DBKeysListVie"
                          Margin="0"
                          ItemsSource="{Binding KeysList}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}"></GridViewColumn>
                            <GridViewColumn Header="Algorithm" DisplayMemberBinding="{Binding Path=AlgrotithmName}"></GridViewColumn>
                            <GridViewColumn Header="Permittion" DisplayMemberBinding="{Binding Path=Permittion}"></GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

<Window x:Class="AsymmetricCryptographyWPF.View.ShowKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:AsymmetricCryptographyWPF.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ShowKeyViewModel}"
        mc:Ignorable="d"
        Title="ShowKeyWindow" Height="510" Width="225"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
    <Grid Margin="5">
        <StackPanel HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    >
            <Label Content="Название" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding Name}" HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Генератор чиел" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding NumberGenerator}" HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Тест простоты" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding PrimalityVerificator}" HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Хеш функция" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding HashAlgorithm}" HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Название алгоритма" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding AlgorithmName}"
                      HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Тип ключа" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding Permission}"
                      HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Размер ключа" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding BinarySize}" HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Modulus" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding Modulus}" HorizontalContentAlignment="Center">

            </TextBox>
            <Label Content="Exponent" HorizontalContentAlignment="Center"/>
            <TextBox Margin="5" Text="{Binding Exponent}" HorizontalContentAlignment="Center">

            </TextBox>
        </StackPanel>
    </Grid>
</Window>
